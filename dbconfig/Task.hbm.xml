<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.git.bean.Task" table="task">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="increment"></generator>
        </id>

        <property name="name" type="java.lang.String" column="name_" length="50"></property>
        <property name="description" type="java.lang.String" column="description_" length="1000"></property>


        <property name="plannedStartDate" type="timestamp" column="plannedStartDate_"></property>
        <property name="plannedEndDate" type="timestamp" column="plannedEndDate_"></property>

        <set name="children" table="task" cascade="all-delete-orphan"
             inverse="true" lazy="true" order-by="order_ asc">
            <key column="parentId_"></key>
            <one-to-many class="com.git.bean.Task"></one-to-many>
        </set>

        <many-to-one name="parent" column="parentId_" class="com.git.bean.Task"></many-to-one>


    </class>


</hibernate-mapping>